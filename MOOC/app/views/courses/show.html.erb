<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Instructor:</strong>
  <%= "#{@course.user.first_name} #{@course.user.last_name}" %>
</p>

<p>
  <strong>List of Lectures:</strong>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Video</th>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course.lectures.each do |lecture| %>
        <tr>
          <td><%= raw(lecture.description) %></td>
          <td><%= link_to 'Video Download', lecture.video_url %></td>
          <td><%= link_to lecture.course.title, lecture.course %></td>
          <td><%= link_to 'Show', lecture %></td>
          <% if can? :edit, lecture %>
          <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
          <% end %>
          <% if can? :destroy, lecture %>
          <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</p>

<% if can? :edit, @course %>
<%= link_to 'Edit', edit_course_path(@course) %> |
<% end %>
<%= link_to 'Back', courses_path %>
